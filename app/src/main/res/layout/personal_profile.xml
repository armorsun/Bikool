<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/profile_title"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sunny"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:src="@drawable/sunny"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#555555" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/wrapped_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wrapped Distance"
                android:layout_weight="1"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/wrapped_distance_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1278km"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/avg_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Average Speed"
                android:layout_weight="1"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/avg_speed_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="37.6km/h"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/avg_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Average Ranking"
                android:layout_weight="1"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/avg_ranking_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3rd"
                android:textSize="18sp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#555555"
            android:layout_marginBottom="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:src="@drawable/explore1"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/date1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="10/22"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/a_week_end_in_taichung"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="A week end in Taichung"
                android:layout_weight="1.5"
                android:gravity="right"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
